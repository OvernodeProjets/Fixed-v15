<%- include('components/header', { title: 'Credentials' }) %>
    <%- include('components/nav') %>
    <!-- Start Main -->
    <main class="container mx-w-6xl mx-auto py-4 justify-center">
        <div class="flex flex-col space-y-8 ">
            <form method="get" action="/servers/doCreate">
                <div class="flex items-center justify-center">
                <div class=" flex flex-col md:flex-row w-1/2 rounded-lg bg-white rounded-xl shadow-lg justify-center ">
                    <div class="block p-6 w-1/2 rounded-xl bg-white text-center">
                      <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2 text-center">Panel Credentials</h5><br>
                      <p class="text-gray-700 text-base mb-4">
                        Email:<br><code style="color: blue;"><%= req.session.userinfo.email %></code><br><br>
                        Username:<br><code style="color: blue;"><%= req.session.userinfo.username %></code><br><br>
                        Password:<br><code style="color: blue;"><%= pass %></code><br>
                      </p>
                      <h4 class="text-gray-800"></h4>
                      <a href="../panel/link" type="button" class="rounded-md border border-gray-300 bg-gray-100 px-4 py-2 text-base font-medium text-gray-700 shadow-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-100 focus:ring-offset-2 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Go to Panel</a>
                      </div>
                    </div>
              </div>
            </div>
            </form>
        </div>
    </main>
